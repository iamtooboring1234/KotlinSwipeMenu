<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>

                <corners android:radius="10dp" />

                <padding
                    android:bottom="10dp"
                    android:left="10dp"
                    android:right="10dp"
                    android:top="10dp" />
                <stroke
                    android:width="1dp"
                    android:color="@color/silver"/>
            </shape>
        </item>

        <item>
            <bitmap android:gravity="center_vertical|right"
                android:src="@drawable/dropdownarrow" />
        </item>

    </layer-list></item>

</selector>